@using Donations.Data
@model Donations.Web.Models.ApplicationViewModel

<div class="row">
    <div class="well col-md-4 col-md-offset-4">
        <form method="post" action="/user/addApplication">
            <select id="category" class="form-control" name="categoryId">
                <option value="0">--Choose a Category--</option>
                @foreach(Category c in Model.Categories)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
            <br />
            <input id="amount" type="text" class="form-control" placeholder="Amount" name="amount" />
            <br />
            <textarea rows="5" class="form-control" placeholder="Description" name="description"></textarea>
            <br />
            <input type="hidden" value="@Model.User.Id" name="userId"/>
            <button disabled class="btn btn-success">Submit Application</button>
        </form>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/apply.js"></script>
}